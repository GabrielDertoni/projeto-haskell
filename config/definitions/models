User json
    name        Text
    nickname    Text
    email       Text
    birthdate   Date
    created     UTCTime
    balance     Currency

Planet json
    name        Text
    mass        Weight
    type        PlanetType
    disttoearth Distance
    radius      Distance
    -- The planet's Initial Coin Offering
    ico         Currency
    ownerId     UserId

Transaction json
    -- If the buyer is `Nothing`, the planet will be destroyed for it's ICO
    buyer       UserId Maybe
    seller      UserId
    planet      PlanetId
    amount      Currency
    created     UTCTime

-- User planet 1-n relation table
UserPlanetRel
    userId        UserId
    planetId      PlanetId
    UniqueUserPlanet userId planetId

-- User transaction 1-n relation table
UserTransactionRel
    user        UserId
    transaction TransactionId
